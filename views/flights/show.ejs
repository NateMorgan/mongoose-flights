<%- include('../partials/html-head.ejs')%>
<%- include('../partials/nav.ejs')%>
  <h1><%= title %></h1>
  <label>Airline</label>
  <p> <%= flight.airline %></p>
  <label>Airport</label>
  <p> <%= flight.airport %></p>
  <label>Flight Number</label>
  <p> <%= flight.flightNo %></p>
  <label> Departure Date</label>
  <p> <%= flight.departs %></p>
  <label> Meal Choices</label>
  <% flight.meals.forEach(meal => { %>
   <p> <%=meal.name%></p>
   <% }) %>
   <label> Add Meal</label>
  <form action="/flights/<%= flight._id %>/meals" method="POST">
    <select name="mealId">
      <% meals.forEach(meal => { %>
       <option value="<%= meal._id %>"><%= meal.name%></option>
      <% }) %>
    </select>
    <button type="submit">Add Meal</button>
  </form>
  <label >Tickets </label>
  <% flight.tickets.forEach(ticket => { %>
   <p> <%=ticket.seat%> - $<%=ticket.price%> </p>
  <% }) %>
  <form action="/flights/<%=flight.
  _id%>/ticket" method="POST">
    <p>Seat</p>
    <input type="text" name="seat" required pattern="[A-F][1-9]\d?">
    <p>Price</p>
    <input type="number" name="price">
    <button type="submit"> Add Ticket</button>
  </form>
  <form action="/flights/<%=flight._id%>/edit" method="GET">
    <button> Edit Flight </button>
  </form>
<%- include('../partials/footer.ejs') %>
